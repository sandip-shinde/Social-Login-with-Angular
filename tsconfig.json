{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "core-module/*": [ "core-module/*" ]
    }
  },
  "include" : [
    "app/**/*",
    "public-app/**/*",
    "node_modules/angular2-logger/app/**/*.ts"
  ]
}


