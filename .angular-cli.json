{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-starter-kit"
  },
  "apps": [
    {
      "name": "public-app",
      "root": "public-app",
      "outDir": "dist",
      "assets": [
        { "glob": "**/*", "input": "../assets/images", "output": "./assets/images" },
        { "glob": "**/*", "input": "../assets/fonts", "output": "./assets/fonts" },
        { "glob": "favicon.ico", "input": "../favicon.ico", "output": "./favicon.ico" }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.public-app.json",
      "testTsconfig": "tsconfig.public-spec.json",
      "prefix": "public-app",
      "styles": [
        "../assets/styles/jquery-ui.min.css",
        "../assets/styles/bootstrap.min.css",
        "../assets/styles/font-awesome.min.css",        
        "../assets/styles/spinner.component.css",
        "../assets/styles/toastr.component.css",
        "../assets/styles/ng2-select.css",        
        "../assets/styles/public.component.css"
      ],
      "scripts": [
        "../assets/references/jquery-2.2.0.min.js",
        "../assets/references/bootstrap.min.js",
        "../assets/references/Intl.min.js",
        "../assets/references/en.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    },
    {
      "name": "app",
      "root": "app",
      "outDir": "dist1",
      "assets": [
        { "glob": "**/*", "input": "../assets/images", "output": "./assets/images" },
        { "glob": "**/*", "input": "../assets/fonts", "output": "./assets/fonts" },       
        { "glob": "favicon.ico", "input": "../favicon.ico", "output": "./favicon.ico" }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../assets/styles/jquery-ui.min.css",
        "../assets/styles/bootstrap.min.css",
        "../assets/styles/font-awesome.min.css",        
        "../assets/styles/spinner.component.css",
        "../assets/styles/toastr.component.css",
        "../assets/styles/ng2-select.css",        
        "../assets/styles/public.component.css"
      ],
      "scripts": [
        "../assets/references/jquery-2.2.0.min.js",
        "../assets/references/bootstrap.min.js",
        "../assets/references/Intl.min.js",
        "../assets/references/en.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
